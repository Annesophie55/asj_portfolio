{% extends 'base.html.twig' %}

{% block title %}Experience{% endblock %}

{% block body %}
    <h1>Experience</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ experience.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ experience.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ experience.content }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ experience.place }}</td>
            </tr>
            <tr>
                <th>DateOfExp</th>
                <td>{{ experience.dateOfExp ? experience.dateOfExp|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ experience.duration }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ experience.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_experience_index') }}">back to list</a>

    <a href="{{ path('app_experience_edit', {'id': experience.id}) }}">edit</a>

    {{ include('experience/_delete_form.html.twig') }}
{% endblock %}
